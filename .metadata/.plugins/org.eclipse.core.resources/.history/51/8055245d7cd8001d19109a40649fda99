package Main;


import java.lang.reflect.Array;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import Articolo.ArticoloMenu;
import Articolo.Pizza;

@SpringBootApplication
public class W4D1Application {
	
	public static Scanner s = new Scanner(System.in);

	public static void main(String[] args) {
		SpringApplication.run(W4D1Application.class, args);
		
	
		List<ArticoloMenu> ordine = new ArrayList<>();
		gestioneMenu(ordine);
	}

	
	public static void gestioneMenu(List<ArticoloMenu> arr) {
		
		
		while(true) {
			System.out.println("\n / ---- Benvenuto da Godfather's Pizzas ---- / \n"
					+ "\n Che cosa vuoi ordinare? \n "
					+ "\n 1 Pizze"
					+ "\n 2 Bibite"
					+ "\n 3 Altro"
					+ "\n 4 Chiedi il conto");
			int scelta = s.nextInt();
			s.nextLine();
			switch(scelta) {
			case 1:
				pizzeOption(arr);
				break;
			case 2:
				break;
			case 3:
				break;
			case 4:
				if(arr.size() == 0) {
					System.out.println("Prima ordina qualcosa!");
				} else {}
				break;
				default: System.out.println("Utilizza un valore valido");
			}
		}
	}
	
	public static void pizzeOption(List<ArticoloMenu> arr) {
		
		Boolean exit = false;
		while(!exit) {	
			System.out.println("Scegli una delle nostre pizze o creane una! | 0 per uscire"
					+ "\n 1 Pizza Margherita (tomato, cheese) 1104 Calories 4.99€"
					+ "\n 2 Hawailan Pizza (tomato, cheese, ham, pineapple) 1024 Calories 6.49€"
					+ "\n 3 Salami Pizza (tomato, cheese, salami) 1160 Calories 5.99€"
					+ "\n 4 Crea la tua pizza");
			int scelta = W4D1Application.s.nextInt();
			W4D1Application.s.nextLine();
			switch(scelta) {
			case 0:
				exit = true;
				break;
			case 1:
				Pizza p = Pizza.createPiazza();
				p.setName("Pizza Margherita");
				break;
			case 2:
				Pizza p1 = Pizza.createPiazza();
				p1.setCalories(1024);
				p1.setName("Hawailan Pizza");
				p1.setPrice(6.49);
				arr.add(p1);
				break;
			case 3:
				Pizza p2 = Pizza.createPiazza();
				p2.setCalories(1160);
				p2.setName("Salami Pizza");
				p2.setPrice(5.99);
				arr.add(p2);
				break;
			case 4:
				break;
			default: System.out.println("Utilizza un valore valido");
			}
		}
	}

}
