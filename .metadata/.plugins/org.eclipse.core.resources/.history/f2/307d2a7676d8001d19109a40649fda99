package Articolo;

import org.springframework.context.annotation.AnnotationConfigApplicationContext;

import Configuration.Configuration;
import Main.W4D1Application;

public class Pizza extends ArticoloMenu {

	private Integer calories;
	
	public Pizza() {
		this.price = 4.99;
		this.calories = 1104;
	}

	public Integer getCalories() {
		return calories;
	}

	public void setCalories(Integer calories) {
		this.calories = calories;
	}
	
	public static void pizzeOption() {
		System.out.println("Scegli una delle nostre pizze o creane una!"
				+ "\n 1 Pizza Margherita(tomato, cheese) 1104 Calories 4.99€"
				+ "\n 2 Hawailan Pizza(tomato, cheese, ham, pineapple) 1024 Calories 6.49€"
				+ "\n 3 Salami Pizza (tomato, cheese, salami) 1160 Calories 5.99€"
				+ "\n 4 Crea la tua pizza");
		int scelta = W4D1Application.s.nextInt();
		W4D1Application.s.nextLine();
		switch(scelta) {
		case 1:
			Pizza p = createPiazza();
			break;
		case 2:
			Pizza p1 = createPiazza();
			p1.setCalories(1024);
			p1.setName("Hawailan Pizza");
			break;
		case 3:
			Pizza p2 = createPiazza();
			p2.setCalories(1160);
			p2.setName("Salami Pizza");
			break;
		case 4:
			break;
		default: System.out.println("Utilizza un valore valido");
		}
	}
	
	public static Pizza createPiazza() {
		AnnotationConfigApplicationContext appContext = new AnnotationConfigApplicationContext(Configuration.class);
		
		Pizza p = (Pizza) appContext.getBean("TestXml");
		
		appContext.close();
		return p;
	}
}
